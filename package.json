{
	"name": "split-payments-service",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"build": "tsc",
		"dev": "ts-node-dev -r dotenv/config ./src/app.ts",
		"start": "node ./dist/app.js",
		"fmt": "npx @biomejs/biome format --write ./src",
		"linter": "npx @biomejs/biome lint ./src",
		"migration:create": "NODE_ENV=dev knex migrate:make -x ts",
		"migration": "knex migrate:latest",
		"migration:rollback": "knex migrate:rollback",
		"test": "NODE_ENV=test jest --config jest.config.js --verbose true --forceExit  --detectOpenHandles",
		"tests": "pnpm run test:setup; NODE_ENV=test jest --config jest.config.js --verbose true --forceExit  --detectOpenHandles",
		"docker:test": "docker compose -p split-payments-service-test -f compose.test.yaml",
		"test:up": "pnpm docker:test up -d -V",
		"test:down": "pnpm docker:test down -v",
		"test:setup": "pnpm test:up; NODE_ENV=test ts-node ./scripts/wait-for-pg.ts; bash ./scripts/wait-for-localstack.sh; NODE_ENV=test pnpm run migration"
	},
	"keywords": [],
	"author": "Allan Larangeiras",
	"devDependencies": {
		"@biomejs/biome": "2.2.7",
		"@jest/globals": "^30.2.0",
		"@types/body-parser": "^1.19.6",
		"@types/config": "^3.3.5",
		"@types/dotenv": "^6.1.1",
		"@types/express": "5.0.3",
		"@types/ioredis": "^4.28.10",
		"@types/jest": "^30.0.0",
		"@types/lodash": "^4.17.20",
		"@types/luxon": "^3.7.1",
		"@types/node": "^24.9.1",
		"@types/pg": "^8.15.5",
		"@types/redis": "^4.0.10",
		"@types/supertest": "^6.0.3",
		"dotenv": "^17.2.3",
		"jest": "^30.2.0",
		"only-allow": "^1.2.1",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.5",
		"ts-mockito": "^2.6.1",
		"ts-node": "10.9.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.916.0",
		"@aws-sdk/client-sns": "^3.916.0",
		"@aws-sdk/s3-request-presigner": "^3.916.0",
		"body-parser": "^2.2.0",
		"config": "4.1.1",
		"express": "5.1.0",
		"http-status-codes": "^2.3.0",
		"ioredis": "^5.8.2",
		"knex": "^3.1.0",
		"lodash": "^4.17.21",
		"luxon": "^3.7.2",
		"pg": "^8.16.3",
		"pino": "^10.1.0",
		"pino-http": "^11.0.0",
		"redis": "^5.9.0",
		"zod": "^4.1.12"
	}
}
